FUNCTION HitungBesarDiskon
  DECLARE total_pembelian, total_harga : num
BEGIN
  INPUT(total_pembelian)
  IF (total_pembelian)
  THEN
      IF (total_pembelian < 500.000)
      THEN
          total_harga <- total_pembelian
      ELSEIF (total_pembelian > 500.000 AND total_pembelian < 1.000.000)
      THEN
          total_harga <- total_pembelian * 5%
      ELSE
          total_harga <- total_pembelian * 10%
      ENDIF
  ELSE
    OUTPUT("Jumlah pemasukkan belum dimasukkan")
OUTPUT("harga akhir=", total_harga)
END
  
    
